{
   "compilerOptions": {
     "target": "es6",
     "module": "CommonJS",
     "allowSyntheticDefaultImports": true,
     "moduleResolution": "node",
     "outDir": "./dist",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "typeRoots": [
       "./node_modules/@types",
       "./src/types/global"
     ],
     "paths": {
      "~/*": ["./src/*"]
    },
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
 }
