{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
"include": [
  "src",
  "types"
],
"exclude": [
    "node_modules",
    "dist"
  ]
}
